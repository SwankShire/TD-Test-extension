{
  "manifest_version": 2,

  "name": "AutoBatch",
  "description": "This extension is for testing only and is not indended for use by anyone.",
  "version": "0.9",

  "browser_action": {
    "default_icon": "TD_icon.png",
    "default_popup": "index.html",
    "default_title": "Click to make a batch!"

  },

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "webRequest",
    "http://*/",
    "https://*/"
  ]
}
